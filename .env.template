# ==============================================
# Vision Provider Selection (Choose ONE only)
# ==============================================
# Options: openai, claude, gemini, azure-openai
USE_VISION=openai

# ==============================================
# Provider-Specific Configuration
# ==============================================

## OpenAI Configuration
# Required if USE_VISION=openai
OPENAI_API_KEY=your_openai_key
OPENAI_VISION_MODEL=gpt-4.1  # Default model (gpt-4.1, gpt-5, gpt-5.1, gpt-5.2)
OPENAI_MAX_TOKENS=8000      # Optional (becomes max_completion_tokens for GPT-5 models)
OPENAI_TEMPERATURE=0.0      # Optional (only works with GPT-5 when reasoning_effort="none")

# GPT-5 Series Reasoning Models Configuration
# For GPT-5, GPT-5.1, GPT-5.2 models only
# Options: none, low, medium, high, xhigh (availability varies by model)
# When set to "none", models run in instant mode and allow temperature parameter
# OPENAI_REASONING_EFFORT=medium

# OpenAI Responses API (recommended for new projects)
# Set to "true" to use the Responses API instead of Chat Completions
# Benefits: stateful conversations, native PDF support, better cache utilization
# OPENAI_USE_RESPONSES_API=false

## Anthropic Claude Configuration
# Required if USE_VISION=claude
ANTHROPIC_API_KEY=your_anthropic_key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022  # Default model

## Google Gemini Configuration
# Required if USE_VISION=gemini
GEMINI_API_KEY=your_gemini_key
GEMINI_MODEL=gemini-2.5-flash-preview-04-17  # Default model

## Azure OpenAI Configuration
# Required if USE_VISION=azure-openai
AZURE_OPENAI_API_KEY=your_azure_key
AZURE_OPENAI_MODEL=gpt-4.1  # Default model (supports gpt-4.1, gpt-5, gpt-5.1, gpt-5.2)
AZURE_OPENAI_API_URL=https://xxx.openai.azure.com
AZURE_OPENAI_API_VERSION=2025-02-15-preview

# Azure GPT-5 Series Reasoning Models Configuration
# For GPT-5, GPT-5.1, GPT-5.2 models deployed on Azure
# Options: none, low, medium, high, xhigh (availability varies by model)
# AZURE_OPENAI_REASONING_EFFORT=medium

# Azure OpenAI Responses API
# Set to "true" to use the Responses API instead of Chat Completions
# AZURE_OPENAI_USE_RESPONSES_API=false

# ==============================================
# Common Performance Settings
# ==============================================
MAX_CONCURRENT_TASKS=5      # Number of concurrent processing tasks
VISION_PARSER_DPI=333      # Image DPI for PDF processing
