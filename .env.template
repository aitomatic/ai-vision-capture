# ==============================================
# Vision Provider Selection (Choose ONE only)
# ==============================================
# Options: openai, claude, gemini, azure-openai
USE_VISION=openai

# ==============================================
# Provider-Specific Configuration
# ==============================================

## OpenAI Configuration
# Required if USE_VISION=openai
OPENAI_API_KEY=your_openai_key
OPENAI_VISION_MODEL=gpt-4o  # Default model
OPENAI_MAX_TOKENS=8000      # Optional
OPENAI_TEMPERATURE=0.0      # Optional

## Anthropic Claude Configuration
# Required if USE_VISION=claude
ANTHROPIC_API_KEY=your_anthropic_key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022  # Default model

## Google Gemini Configuration
# Required if USE_VISION=gemini
GEMINI_API_KEY=your_gemini_key
GEMINI_MODEL=gemini-2.5-flash-preview-04-17  # Default model

## Azure OpenAI Configuration
# Required if USE_VISION=azure-openai
AZURE_OPENAI_API_KEY=your_azure_key
AZURE_OPENAI_MODEL=gpt-4o  # Default model
AZURE_OPENAI_API_URL=https://xxx.openai.azure.com
AZURE_OPENAI_API_VERSION=2025-02-15-preview

# ==============================================
# Common Performance Settings
# ==============================================
MAX_CONCURRENT_TASKS=5      # Number of concurrent processing tasks
VISION_PARSER_DPI=333      # Image DPI for PDF processing
